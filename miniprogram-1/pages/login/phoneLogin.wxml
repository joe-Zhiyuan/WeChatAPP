<view class="phone">
  <view>
      <text class="phoneTilte">欢迎登录天天速达</text>
  </view>
  <form class="phoneForm" method="post">
    <view class="phoneInput">
      <image src="/assets/loginIcon@2x.png"></image>
      <input type="number" bindinput="bindPhoneInput" max-length="11" placeholder="输入手机号"/>
    </view>
    <view class="keyInput">
      <image src="/assets/phoneIcon@2x.png"></image>
      <input type="text" bindinput="bindKeyInput" min-length="4" max-length="6" placeholder="输入验证码"/>
      <text class="getVerify" bindtap="getSmsCode">{{smsText}}</text>
    </view>
  </form> 
  <button class="loginBtn" bindtap="phoneLogin">登录</button>
  <view class="phoneTip">未注册用户登录后默认为您注册为天天速达用户</view>
  <footer></footer>
</view>
