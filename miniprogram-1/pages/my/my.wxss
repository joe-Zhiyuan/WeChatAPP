/* pages/my/my.wxss */
.container {
  padding: 0;
}
.header {
  position: relative;
  height: 377rpx;
  z-index: 1;
}
.headerBg {
  position: relative;
  height: 290rpx;
  overflow: hidden;
  z-index: -1;
}
.headerBg image {
  position: absolute;
  width: 150%;
  top: -230rpx;
  left: -50rpx;
}
.user {
  position: absolute;
  width: calc(100% - 64rpx);
  height: 329rpx;
  border-radius: 8rpx;
  background-color: #ffffff;
  top: 50rpx;
  left: 32rpx;
  z-index: 5;
}
.userInfo {
  display: flex;
  width: 100%;
  padding: 36rpx 24rpx;
}
.userImage {
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userImage image {
  width: 100%;
  height: 100%;
}
.userMessage {
  flex: 1;
  padding: 0 28rpx;
  color: #333333;
  /* 解决flex布局使用white-space: nowrap;导致图片布局出错、没有截取文字 */
  min-width: 0;
}
.userName {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 44rpx;
}
.userPhone, .userCompany {
  font-size: 24rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin-top: 4rpx;
}
.userCompany {
  position: relative;
  width: calc(100% - 100rpx);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.userMessage text {
  display: block;
  font-size: 42rpx;
  line-height: 60rpx;
  font-weight: 600;
  /* color: #cccccc; */
  margin-top: 25rpx;
}
.userCount {
  display: flex;
  width: 100%;
  height: 90rpx;
  margin-top: 30rpx;
  align-items: center;
}
.count {
  flex: 1;
  text-align: center;
}
.line {
  width: 1rpx;
  height: 60rpx;
  background-color: #E8E8E8;
}
.font {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 47rpx;
}
.countName {
  font-size: 24rpx;
  line-height: 33rpx;
  color: #666666;
  margin-top: 6rpx;
}
.cont {
  width: 100%;
  padding: 25rpx 32rpx 0;
}
.contFun {
  display: flex;
  width: 100%;
  background-color: #ffffff;
  border-radius: 8rpx;
}
.contItem {
  width: 33.33%;
  text-align: center;
}
.contImage {
  width: 100%;
  height: 120rpx;
}
.contImage image {
  display: inline-block;
  max-width: 100%;
  max-height: 120rpx;
  text-align: center;
  vertical-align: middle;
}
.contWord {
  font-size: 32rpx;
  line-height: 44rpx;
}
.signOut {
  width: 100%;
  margin-top: 50rpx;
}
.signOutBtn {
  width: 100% !important;
  padding: 22rpx 0;
  border-radius: 10rpx;
  color: #B5B5B5;
  background-color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 45rpx;
  text-align: center;
}